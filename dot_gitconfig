# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
  name = {{ keepassxcAttribute "dot-github" "UserName" }}
  email = {{ keepassxcAttribute "dot-github" "URL" }}
[core]
	excludesFile = ~/.gitignore
	pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  line-numbers = true
  navigate = true    # use n and N to move between diff sections
  side-by-side = true
  ; light = "$(defaults read -globalDomain AppleInterfaceStyle &>/dev/null && echo false || echo true)"
  light = false
  ; syntax-theme = "$(defaults read -globalDomain AppleInterfaceStyle &>/dev/null && echo Catppuccin-mocha || echo Catppuccin-latte)"
  ; TODO: fix dynamic theme
  syntax-theme = "Catppuccin-latte"
  #line-numbers-left-format = ""
  #line-numbers-right-format = "â”‚ "
[alias]
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lg = !"git lg1"
  diff-words = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
# define command which will be used when "nvim" is set as a merge tool
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
# set "nvim" as tool for merging
[merge]
	tool = nvim
# automatically launch merge tool without displaying a prompt
[init]
	defaultBranch = master
[diff]
  colorMoved = default
[includeIf "gitdir:~/projects/"]
  path = ~/projects/.gitconfig.projects
